# Video Transcoding Configuration

# Number of concurrent transcoding jobs (default: 3)
# Recommended: Number of CPU cores / 2
# Higher = faster processing, more resource usage
VIDEO_QUEUE_CONCURRENCY=3

# Job timeout in milliseconds (default: 21600000 = 6 hours)
# Adjust based on your maximum expected video length
VIDEO_QUEUE_JOB_TIMEOUT=21600000

# Thumbnail interval in seconds (default: auto)
# auto = adaptive based on video length (5-10s)
# Or specify a fixed number (e.g., 5, 7, 10)
VIDEO_THUMBNAIL_INTERVAL=auto

# Maximum thumbnails per sprite sheet (default: 100)
# Videos longer than this will split into multiple sprites
# Lower = more sprite files, faster loading
# Higher = fewer sprite files, larger images
VIDEO_THUMBNAIL_MAX_PER_SPRITE=100
